<%= form_for(@song = @artist.songs.new) do |f| %>
  <%= render 'shared/validation_errors', object: f.object %>

  <%= f.hidden_field :artist_id, value: @artist.id, id: "song-artist-id" %>
  <%= f.hidden_field :id, value: @song.id, id: "song-id" %>

  <div class="form-group">
    <label>Name</label>
    <%= f.text_field :name, placeholder: "Song name", class: "form-control", id: "song-name" %>
  </div>

  <!-- <div class="form-group"> -->
    <!-- <label>Duration</label> -->
    <!-- <%#= f.time_select :duration, placeholder: "Song duration", class: "form-control", id: "song-duration" %> -->
  <!-- </div> -->

  <div class="form-group">
    <label>Album</label>
    <%= f.text_field :album, placeholder: "Album name", class: "form-control", id: "song-album" %>
  </div>

  <div class="form-group">
    <label>Rating</label>
    <%= f.number_field :rating, placeholder: "Song rating", class: "form-control", id: "song-rating" %>
  </div>

  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
